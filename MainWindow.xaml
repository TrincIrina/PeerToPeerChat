<Window x:Class="PeerToPeerChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeerToPeerChat"
        mc:Ignorable="d"
        Title="MainWindow" FontSize="20" 
        Height="270" MinHeight="270" MaxHeight="270" 
        Width="300" MinWidth="300" MaxWidth="300">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="Enter ip:" Margin="10"/>
            <TextBox x:Name="IpTextBox" Text="127.0.0.1" Width="150" Margin="10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Enter port:" Margin="10"/>
            <TextBox x:Name="PortTextBox" Text="1024" Width="130" Margin="10"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Button x:Name="StartButton" Content="Start" Width="250" Margin="10" Click="StartButton_Click" />
            <Button x:Name="ExitButton" Content="Exit" Width="250" Margin="10" Click="ExitButton_Click"/>
        </StackPanel>        
    </StackPanel>
</Window>
