<Window x:Class="PeerToPeerChat.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeerToPeerChat"
        mc:Ignorable="d"
        Title="ChatWindow" FontSize="20" 
        Height="460" MinHeight="460" MaxHeight="460"
        Width="600" MinWidth="600" MaxWidth="600">
    <StackPanel Orientation="Vertical">
        <Label x:Name="StatusLabel" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2"/>
        <ListBox x:Name="ChatListBox" Height="250" Margin="5"/>
        <Label Content="Write a message..." Margin="5"/>
        <TextBox x:Name="MessageTextBox" Margin="5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="SendButton" Content="Send message" Width="240" Margin="5" Click="SendButton_Click"/>
            <Button x:Name="ExitButton" Content="Exit" Width="240" Margin="5" Click="ExitButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
